<% title "Add a New Friend" %><br />

<div class="container">
 	<div class="container">
 		<% if flash[:notice] %>
			<div class="alert alert-error">
    			<%= flash[:notice] %>
    		</div>
		<% end %>

		<%= form_for @person, :url => { :action => "create" }, :html => {:class => "form-horizontal"} do |f| %>
		  <%= f.label :name %>
		  <%= f.text_field :name %><br />
		  <%= f.label :email %>
		  <%= f.text_field :email %><br /><br />
		  <%= f.button "Add Friend", :class=> "btn btn-primary"
		  %>
		<% end %>
	</div> <!-- /container -->
	<%= render 'footer' %>

</div> <!-- /container -->
	